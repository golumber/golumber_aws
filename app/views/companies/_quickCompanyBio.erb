<div class="logoImg">
<%= render 'photos/lightbox_tag', {:photo => @company.primary_photo, :version => :large_thumbnail} %></div>
<div id = "companyBio">
	<table id = "companyBio" class="gradient2">
		<tr>
			<td><%=@company.name %></td>
			<td><%= link_to @company.website, url_with_protocol(@company.website) %></td>
		</tr>
		<tr>
			<td></td>
			<td><%=@company.phone_number %></td>
		</tr>
		<tr><td><%=@company.street_address%></td>
			<td>
				<% if not(@company_employee.nil?) %>
				<%= mail_to(@company_employee.email) %>
				<% end %></td>
			</tr>
		<tr><td><%=@company.city%>, <%=@company.state %> <%=@company.zip_code %></td>
			<td></td>
		</tr>
		<tr>
			<td><%=@company.country %></td>
			<td><%= link_to "View Company", "/companies/#{@company.id}", :method => "get", :style => "color:#22329;text-decoration: none;", :class => "genericButton" %></td>
		</tr>
	</table>
</div>
